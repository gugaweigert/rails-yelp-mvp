<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name  %>
  <%= f.label :address %>
  <%= f.text_field :address%>
  <%= f.label :phone %>
  <%= f.date_field :phone %>
